<% layout('/layouts/boilerplate')-%>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h4>Edit your Listing :</h4>
    <form action="/listings/<%=listing.id%>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" placeholder="Add Title" name="listing[title]" value="<%=listing.title%>" class="form-control" required >
            <div class="valid-feedback">title looks good</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea name="listing[description]" placeholder="Add description" class="form-control" required ><%=listing.description%></textarea>
            <div class="invalid-feedback">please describe your listing</div>
        </div>
        
        <div class="mb-3">
            Original listing <br>
            <img src="<%=originalImgUrl%>" alt="listing image" class="editImage">
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input type="file" name="listing[image]" class="form-control" >
            
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price:</label>
            <input 
                type="number" 
                placeholder="1200" 
                name="listing[price]" 
                class="form-control"
                value="<%=listing.price%>"
             required > 
             <div class="invalid-feedback">Price should be valid</div>
            </div>
        
            <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country:</label>
            <input 
                type="text" 
                placeholder="India"
                name="listing[country]"
                class="form-control"
                value="<%=listing.country%>"
             required >
              <div class="invalid-feedback">Country name should be valid</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location:</label>
            <input type="text" placeholder="Add country" name="listing[location]" class="form-control" value="<%=listing.location %>" required >
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        
        
        <button class="btn add-btn mt-3">Edit</button>
    </form>
 </div>
</div>